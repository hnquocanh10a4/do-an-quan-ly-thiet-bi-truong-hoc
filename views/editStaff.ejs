<body>
    
    <div class="singup"> 
    <div class="container">
        <div class="row">
            <div class="col col-lg-6">
                <h1 class="labelDK">Chỉnh sửa</h1>
                <form class="form-singup" action="/Edit/<%= staffEdit.MSNV %>" method="POST">
                    <h6>Mã số nhân viên</h6>
                    <input type="text" class="form-control" value="<%= staffEdit.MSNV %>" name="MSNV" placeholder="Mã số nhân viên">
                    <p class="err"><%= errMSNV %> </p>
                    
                    <h6>Tên nhân viên</h6>
                    <input type="text" class="form-control" value="<%= staffEdit.staffName %>" name="staffName" placeholder="Tên nhân viên">
                    
                    <h6>Tên đăng nhập</h6>
                    <input type="text" class="form-control" value="<%= staffEdit.user.username %>" name="username" placeholder="Tên đăng nhập">
                    <p class="err"><%= errTDN %> </p>
                  
                    <h6>Mật khẩu</h6>
                    <input type="text" class="form-control" value="<%= staffEdit.password %>" name="password" placeholder="Mật khẩu">
                    <p class="err"><%= errMK %> </p>
                    <h6 class="mg-top"> Địa chỉ</h6>
                    <input type="text" class="form-control" name="address" value="<%= staffEdit.address %>" placeholder="Địa chỉ">
                    
                    <select class="form-select form-select-lg-1 "name="age"  aria-label=".form-select-lg example">
                        <option selected>Tuổi</option>
                        <% for(var i= 18 ; i<40 ; i++){ %> 
                            <option value= <%= i %>> <%= i %> </option>
                        <% };; %> 
                      </select>
                      <p class="err"><%= errAge %> </p>
                    
                    <label class="labelForSex">Giới tính</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sex" id="flexRadioDefault1" value="Nam" checked>
                        <label class="form-check-label" for="flexRadioDefault1">
                          Nam
                        </label>
                      </div>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="sex" id="flexRadioDefault2" value="Nữ">
                        <label class="form-check-label" for="flexRadioDefault2">
                          Nữ
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sex" id="flexRadioDefault3" value="Khác">
                        <label class="form-check-label" for="flexRadioDefault2">
                          Khác
                        </label>
                    </div>


                    <button type="submit" class="btn btn-primary">Chỉnh sửa</button>
                </form>
            </div>
            <div class="col col-lg-6">
                <img class="img-sing-up" src="https://previews.123rf.com/images/skypicsstudio/skypicsstudio1903/skypicsstudio190300242/124490095-vector-illustration-of-graphic-designer-team-computer-drawing-tools-and-accessories-design-studio-or.jpg" alt="">
