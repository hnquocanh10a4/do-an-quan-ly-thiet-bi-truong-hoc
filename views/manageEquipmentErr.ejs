<body>
    <main role="main">
      <div class="manage"> 
        <!-- Main jumbotron for a primary marketing message or call to action -->
        <div class="jumbotron">
          <div class="container">
            <h1 class="display-3">Quản lý thiết bị PTIT</h1>
          </div>
        </div>
  
        <div class="container">
          <!-- Example row of columns -->
          <div class="errTag">
            <h5 class="errMess">Thiết bị đang mượn không được thay đổi thông tin</h5>
          </div>
          <div class="row">
            <% updateEquipment.forEach(function(item){  %>
              <div class="col-md-4">
                <h2 class="item-name"> <%=  item.name  %> </h2>
                <p>Số lượng : <%=  item.max  %></p>
                <p>Giá thành : <%= item.cost %> </p>
              <!-- <p><a class="btn btn-info" href="" role="button">Chỉnh sửa&raquo;</a></p>
              <p><a class="btn btn-info" href="" role="button">Xóa&raquo;</a></p> -->
              <form action="/deleteEquipment/<%=  item.name  %>" method="POST">
                  <button class="btn btn-outline-danger" type="submit"><i class="fas fa-trash-alt"></i> Xóa</button>
              </form>
              <br>
              <form action="/updateEquipment/<%=  item.name  %>">
                <button class="btn btn-outline-primary one-line-btn" type="submit"><i class="far fa-sticky-note"></i> Chỉnh sửa</button>
            </form>
            </div>
            
            <% }); %> 
          </div>
  
          <hr>
  
        </div> <!-- /container -->
