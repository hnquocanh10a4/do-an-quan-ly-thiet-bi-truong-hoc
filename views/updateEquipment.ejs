                <form class="form-singup" action="/updateEquipment/<%= updateEquipment.name %>" method="POST">
                    <h4>Tên vật liệu</h4>
                    <input type="text" class="form-control" name="name" value="<%= updateEquipment.name %>" required autofocus>
