                    <h4>Số lượng</h4>
                    <input type="text" class="form-control" name="max"  value="<%= updateEquipment.max %>" required >
                    <p class="err"><%= errQuantity %> </p>
                    <h4>Giá thành</h4>
                    <input type="text" class="form-control" name="cost" value="<%= updateEquipment.cost %>" required >
                    <p class="err"><%= errCost %> </p>
                    <button type="submit" class="btn btn-primary btn-lg">Chỉnh sửa</button>
                </form>
